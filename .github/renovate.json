{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":semanticCommits", ":automergeDigest"],
  "timezone": "America/Denver",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchCategories": ["golang"],
      "minimumReleaseAge": "3 days",
      "labels": ["go-deps", "dependencies"],
      "postUpdateOptions": ["gomodTidy"]
    },
    {
      "description": "Pin Go version updates",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "pin",
      "labels": ["go-version", "dependencies"],
      "reviewers": ["kusold"]
    },
    {
      "description": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "automerge": true,
      "labels": ["github-actions", "dependencies"]
    },
    {
      "description": "Nix flake inputs",
      "matchManagers": ["nix"],
      "matchFileNames": ["flake.nix", "flake.lock"],
      "groupName": "nix flake inputs",
      "schedule": ["before 6am on monday"],
      "automerge": true,
      "labels": ["nix", "dependencies"]
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"],
    "reviewers": ["kusold"]
  },
  "osvVulnerabilityAlerts": true
}
